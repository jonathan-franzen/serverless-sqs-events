{
	"compilerOptions": {
		"target": "ES6",
		"module": "Node16",
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "Node16",
		"paths": {
			"@/*": ["./src/*"]
		},
		"removeComments": true
	},
	"include": ["src/**/*"]
}
